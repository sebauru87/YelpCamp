<%- include("../partials/header") %>
<div class="container">
    <div class="row">
        <h1 style="text-align: center;">Creat a new campgrounds</h1>

        <div style="width: 30%; margin: 20px auto;">

            <form action="/campgrounds" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="name" placeholder="name of campground">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="image" placeholder="image url">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="description" placeholder="some description">
                </div>
                <div class="form-group"></div>
                    <button class="btn-lg btn-primary btn-block">Submit</button>
                </div>
            </form>
            <div style="text-align: center;">
                <a href="/campgrounds">Back to campgrounds page</a>
            </div>
        </div>
        
    </div>
</div>

<%- include("../partials/footer") %>
