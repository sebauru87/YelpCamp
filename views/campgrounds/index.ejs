<%- include("../partials/header") %>


<header class="jumbotron">
    <div class="container">
        <h1>Campgrounds at YelpCamp</h1>
        <p>View of all campgrounds</p>
        <p1>
            <a class="btn btn-primary btn-large" href="/campgrounds/new">Add new CampGround</a>
        </p1>
    </div>
</header>

<div class="row text-center" style="display:flex; flex-wrap: wrap;">
    

        <% campgrounds.forEach( function (camp){    %>
        <div class="col-md-3 col-sm-6"> 
        
            
        
            <div class="thumbnail">
               <img src="<%= camp.image %>">
               <div class="caption">
                    <h4>
                        <%= camp.name %>
                    </h4>
                    <p>
                        <a href="/campgrounds/<%= camp._id %>" class="btn btn-primary">More Info</a>
                    </p>
               </div>
            </div>
        </div>
        
        <% }); %>

    
</div>
<a href="/">Ir al Home page</a>
<%- include("../partials/footer") %>